<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:clickable="true"
    android:layout_height="wrap_content"
    android:focusable="true">

<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:backgroundTint="#FF9E24"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp"
    android:layout_marginStart="2dp"
    android:layout_marginEnd="2dp"
    app:cardUseCompatPadding="true">

   <androidx.constraintlayout.widget.ConstraintLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <ImageView
           android:layout_width="70dp"
           android:layout_height="70dp"
           android:id="@+id/user"
           android:padding="8dp"
           app:layout_constraintLeft_toLeftOf="parent"
           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintBottom_toBottomOf="parent"
           android:src="@drawable/user"/>
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           app:layout_constraintLeft_toLeftOf="parent"
           android:text="1"
           android:textColor="#ffbf69"
           android:textSize="13sp"
           android:id="@+id/tv_count"
           app:layout_constraintRight_toRightOf="@id/user"
           android:paddingTop="22dp"
           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintBottom_toBottomOf="parent" />
       <TextView
           android:id="@+id/tv_name"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_margin="5dp"
           android:layout_marginLeft="4dp"
           android:text="Name"
           android:textStyle="bold"
           android:textColor="@color/black"
           android:textSize="18sp"
           app:layout_constraintLeft_toRightOf="@id/user"
           app:layout_constraintTop_toTopOf="parent"
            />

       <TextView
           android:id="@+id/tv_number"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_margin="5dp"
           android:text="Number"
           android:textSize="15sp"
           app:layout_constraintLeft_toRightOf="@id/user"
           app:layout_constraintTop_toBottomOf="@id/tv_name" />

       <ImageView
           android:layout_width="25dp"
           android:layout_height="25dp"
           android:id="@+id/phone_call"
           app:layout_constraintBottom_toBottomOf="parent"
           app:layout_constraintRight_toLeftOf="@id/rv_menu"
           app:layout_constraintTop_toTopOf="parent"
           android:layout_marginEnd="10dp"
           android:src="@drawable/ic_baseline_local_phone_24"
           app:tint="#1D8E22" />
       <ImageView
           android:layout_width="25dp"
           android:layout_height="25dp"
           android:id="@+id/sms"
           android:layout_marginEnd="10dp"
           app:layout_constraintRight_toLeftOf="@id/phone_call"
           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintBottom_toBottomOf="parent"
           android:src="@drawable/ic_baseline_sms_24"
           app:tint="#FDD835" />
       <ImageView
           android:layout_width="25dp"
           android:layout_height="25dp"
           android:id="@+id/rv_menu"
           android:layout_marginEnd="10dp"
           app:layout_constraintRight_toRightOf="parent"
           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintBottom_toBottomOf="parent"
           android:src="@drawable/ic_baseline_more_vert_24"
           app:tint="#FF6200EE" />

   </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>




</androidx.appcompat.widget.LinearLayoutCompat>